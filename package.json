{
    "name": "nest-js-starter",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "license": "MIT",
    "scripts": {
        "clean": "rimraf node_modules",
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "yarn build && nest start",
        "start:dev": "yarn build && nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "tsc --noEmit && eslint \"*/**/*.{js,ts}\" --quiet --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "pretypeorm": "(rm ormconfig.json || :) && ts-node -r tsconfig-paths/register src/library/scripts/write-type-orm-config.ts",
        "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
        "typeorm:migration:generate": "yarn typeorm migration:generate -n",
        "migration:run": "yarn typeorm migration:run",
        "migration:revert": "yarn typeorm migration:revert",
        "seed:generate": "yarn typeorm migration:generate -c seed -n ",
        "seed:run": "yarn typeorm migration:run -c seed",
        "seed:revert": "yarn typeorm migration:revert -c seed"
    },
    "dependencies": {
        "@nest-middlewares/cookie-parser": "^6.0.0",
        "@nestjs/azure-storage": "^2.1.1",
        "@nestjs/common": "^6.7.2",
        "@nestjs/core": "^6.7.2",
        "@nestjs/jwt": "^6.1.1",
        "@nestjs/passport": "^6.1.1",
        "@nestjs/platform-express": "^7.0.3",
        "@nestjs/swagger": "^4.2.3",
        "@nestjs/typeorm": "^6.2.0",
        "@nestjsx/crud": "^4.4.1",
        "@nestjsx/crud-request": "^4.4.2",
        "@nestjsx/crud-typeorm": "^4.4.1",
        "@types/lodash": "^4.14.149",
        "axios": "^0.21.1",
        "class-transformer": "^0.2.3",
        "class-validator": "^0.11.0",
        "cpx": "^1.5.0",
        "dotenv": "^8.2.0",
        "dotenv-extended": "^2.7.1",
        "flatted": "^2.0.1",
        "glob": "^7.1.6",
        "helmet": "^3.21.3",
        "ioredis": "^4.16.0",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.15",
        "moment": "^2.24.0",
        "nestjs-redis": "^1.2.5",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "pg": "^7.17.1",
        "pre-commit": "^1.2.2",
        "qs": "^6.9.1",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.0",
        "rxjs": "^6.5.3",
        "swagger-ui-express": "^4.1.3",
        "typeorm": "^0.2.24"
    },
    "devDependencies": {
        "@nestjs/cli": "^6.9.0",
        "@nestjs/schematics": "^6.7.0",
        "@nestjs/testing": "^6.7.1",
        "@types/express": "^4.17.3",
        "@types/jest": "^24.0.18",
        "@types/node": "^12.12.30",
        "@types/passport-jwt": "^3.0.3",
        "@types/qs": "^6.9.1",
        "@types/supertest": "^2.0.8",
        "@typescript-eslint/eslint-plugin": "^2.17.0",
        "@typescript-eslint/parser": "^2.17.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.9.0",
        "eslint-plugin-prettier": "^3.1.2",
        "husky": "^4.2.0",
        "jest": "^24.9.0",
        "lint-staged": "^10.0.2",
        "prettier": "^1.19.1",
        "supertest": "^4.0.2",
        "ts-jest": "^24.1.0",
        "ts-loader": "^6.1.1",
        "ts-node": "^8.4.1",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^3.6.3",
        "yarn": "^1.22.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsc --noEmit && lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "eslint \"*/**/*.{js,ts}\" --fix",
            "git add"
        ]
    }
}
